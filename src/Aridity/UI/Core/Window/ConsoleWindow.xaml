<Window x:Class="Aridity.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aridity"
        mc:Ignorable="d"
        Title="Console" Height="325" Width="538" WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,1">
        <TextBox x:Name="consoleLog" Margin="10,10,10,32" TextWrapping="Wrap" Background="Black" Foreground="#FF13FF00"/>
        <TextBox x:Name="consoleCommand" HorizontalAlignment="Left" Margin="10,0,0,6" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="452" Height="21"/>
        <Button x:Name="btnEnterCommand" Content="Enter" HorizontalAlignment="Right" Margin="0,0,10,6" VerticalAlignment="Bottom" Width="61" Height="21" Click="btnEnterCommand_Click"/>

    </Grid>
</Window>
